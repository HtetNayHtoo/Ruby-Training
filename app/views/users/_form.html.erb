<%= form_with model: user do |form| %>
<%= form.label :username%>
<%= form.text_field :username%><%= @username_message %>
<%= @username_message = @user.errors.full_messages_for(:username).first%>
<br/>
<%= form.label :email%>
<%= form.email_field :email %><%= @email_message %>
<%= @email_message = @user.errors.full_messages_for(:email).first %>
<br/>
<%= form.label :password %>
<%= form.password_field :password %><%= @password_message %>
<%= @password_message = @user.errors.full_messages_for(:password).first %>
<br/>
<%= form.submit "Sign Up"%><br/> <%= link_to "Login", login_path %>
<% end %>